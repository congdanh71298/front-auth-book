<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Books App</title>
</head>
<body>
  <h1>Books App</h1>

  <h2>Register</h2>
  <form id="registerForm">
    <label for="username">Username:</label>
    <input type="text" id="username" required><br>

    <label for="password">Password:</label>
    <input type="password" id="password" required><br>

    <button type="submit">Register</button>
  </form>

  <h2>Login</h2>
  <form id="loginForm">
    <label for="username">Username:</label>
    <input type="text" id="username" required><br>

    <label for="password">Password:</label>
    <input type="password" id="password" required><br>

    <button type="submit">Login</button>
  </form>

  <h2>Fetch Books</h2>
  <button id="fetchBooksButton">Fetch Books</button>
  <ul id="booksList"></ul>

  <h2>Create Book</h2>
  <form id="createBookForm">
    <label for="title">Title:</label>
    <input type="text" id="title" required><br>

    <label for="author">Author:</label>
    <input type="text" id="author" required><br>

    <label for="publication_date">Publication Date:</label>
    <input type="date" id="publication_date" required><br>

    <label for="description">Description:</label>
    <textarea id="description" required></textarea><br>

    <button type="submit">Create Book</button>
  </form>

  <h2>Book Details</h2>
  <label for="bookId">Book ID:</label>
  <input type="text" id="bookId" required>
  <button id="getBookButton">Get Book Details</button>
  <div id="bookDetails"></div>
  
  <h2>Delete Book</h2>
  <label for="deleteBookId">Book ID:</label>
  <input type="text" id="deleteBookId" required>
  <button id="deleteBookButton">Delete Book</button>

  <h2>User Books</h2>
  <label for="userId">User ID:</label>
  <input type="text" id="userId" required>
  <button id="getUserBooksButton">Get User Books</button>
  <ul id="userBooksList"></ul>

  <script src="main.js"></script>
</body>
</html>
